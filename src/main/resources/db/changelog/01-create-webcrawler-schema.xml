<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="shacharl">
        <createTable tableName="WEB_CRAWLER"
                     remarks="A table defining the web crawlers metadata">
            <column name="WEB_CRAWLER_ID" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="WEB_CRAWLER_TYPE" type="varchar(100)" defaultValue="BFS">
                <constraints nullable="false"/>
            </column>
            <column name="WEB_CRAWLER_DATE_CREATED" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="WEB_CRAWLER_DATE_MODIFIED" type="timestamp"  defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <createTable tableName="CONFIGURATIONS"
                     remarks="A configuration table">
            <column name="CON_ID" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="CON_KEY" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="CON_VALUE" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CON_CRAWLER_ID" type="int">
                <constraints nullable="true" foreignKeyName="true"/>
            </column>
            <column name="WEB_CRAWLER_DATE_CREATED" type="timestamp"  defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="WEB_CRAWLER_DATE_MODIFIED" type="timestamp"  defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="CONFIGURATIONS" baseColumnNames="CON_CRAWLER_ID" constraintName="CONFIGURATION_CRAWLER_ID" referencedTableName="WEB_CRAWLER"
                                 referencedColumnNames="WEB_CRAWLER_ID" />

    </changeSet>


</databaseChangeLog>